[app]

# Title of your application
title = SanthusShare

# Package name
package.name = santhussahre

# Package domain (needed for android/ios packaging)
package.domain = org.example

# Source code where the main.py lives
source.dir = .

# Source files to include (e.g. python files, kivy files)
source.include_exts = py,png,jpg,kv,atlas

# List of application requirements
requirements = python3,kivy

# Android API version to use
android.api = 21

# Android minimum API version to use
android.minapi = 21

# Android target API version
android.targetapi = 29

# Android architectures to build for
android.archs = armeabi-v7a

# Copy library instead of making a libpymodules.so
android.copy_libs = False

# Application versioning (method 1)
version = 1.0

# Application author
author = Your Name

# Application description
description = Your application description

# Application icon (place icon.png in the images directory)
icon.filename = images/icon.png
